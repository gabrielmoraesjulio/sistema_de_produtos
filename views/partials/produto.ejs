<div class="container mt-5">
    <div class="row d-flex justify-content-center ">
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Linha</th>
                    <th scope="col">Peso</th>
                    <th scope="col">Pre√ßo</th>
                    <th scope="col">Validade</th>
                    <th scope="col">Editar</th>
                    <th scope="col">Detalhes</th>
                </tr>
            </thead>
            <% acharProdutos.forEach((produtos) => { %>
                <tbody>
                    <tr>
                        <th scope="row"><%= produtos._id %></th>
                        <td>
                            <%= produtos.nomeProduto %>
                            <%= produtos.marcaProduto %>
                        </td>
                        <td><%= produtos.linhaProduto %></td>
                        <td><%= produtos.pesoProduto %></td>
                        <td><%= produtos.precoProduto %></td>
                        <td><%= produtos.validadeProduto %></td>
                        <td class="text-center">
                            <form action="/alterar" method="post">
                                <input type="hidden" name="idProduto" value="<%= produtos._id%>">
                                <a class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover">
                                    <button type="submit" class="btn btn-link">Alterar</button>                         
                                </a>
                            </form>
                        </td>    
                        <td class="text-center">
                            <form action="/details" method="post">
                                <input type="hidden" name="idProduto" value="<%= produtos._id%>">
                                <a class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover">
                                    <button type="submit" class="btn btn-link">Detalhes</button>                         
                                </a>
                            </form>
                        </td>                   
                    </tr>
                </tbody>
            <% }) %>
        </table>
    </div>
</div>